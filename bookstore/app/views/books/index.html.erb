<h1>Books</h1>
<p>Available as of <%= @avilable_at %></p>
<ol>
	<% @books.each do |book| %>
	<li>
		<%= link_to(book.title, book) %> by <%= book.author %> <br />
		<%= format_average_stars(book) %>
		<% if book.reviews.any? %>
			(out of <%= pluralize(book.reviews.size, 'review') %> )
		<% end %>
	</li>
	<% end %>
</ol>
<%= paginate @books %>